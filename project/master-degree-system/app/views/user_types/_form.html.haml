= form_for(@user_type) do |f|
  - if @user_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_type.errors.count, "error")
        prohibited this user_type from being saved:
      %ul
        - @user_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :creator
    %br/
    = f.text_field :creator
  .field
    = f.label :modifier
    %br/
    = f.text_field :modifier
  .actions
    = f.submit
